{% extends "base.html.twig" %}

{% block title %}
	Ajouter un post
{% endblock %}

{% block body %}
	<h1>Ajouter un post</h1>
	{{ form_start(formView) }}
	<div class="row row-cols-1 justify-content-center g-5">
		<div class="col">
			{{ form_row(formView.title) }}
			{{ form_row(formView.description) }}
			{{ form_row(formView.link) }}
			{{ form_row(formView.photo) }}
			<button type="submit" class="btn btn-success mt-3">Ajouter</button>
		</div>
	</div>
	{{ form_end(formView) }}
{% endblock %}
